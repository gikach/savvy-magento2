<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1000" translate="label">
            <group id="savvy" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>Savvy Payments</label>
                <field id="active" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label"
                       type="select">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_secret" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="15"
                       translate="label" type="text">
                    <label>Api Key (Secret)</label>
                </field>
                <field id="api_secret_public" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="15"
                       translate="label" type="text">
                    <label>Api Key (Public)</label>
                </field>
                <field id="api_testnet" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="16"
                       translate="label" type="text">
                    <label>Api Key (Testnet)</label>
                    <comment>Testnet API key. Make sure that you enabled Testnet</comment>
                </field>
                <field id="api_testnet_public" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="16"
                       translate="label" type="text">
                    <label>Api Key (Testnet Public)</label>
                    <comment>Testnet Public API key.</comment>
                </field>
                <field id="title" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label"
                       type="text">
                    <label>Title</label>
                </field>
                <field id="order_status" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30"
                       translate="label" type="select">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="maxunderpaymentfiat" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="31"
                       translate="label" type="text">
                    <label>Underpayment (USD)</label>
                </field>
                <field id="minoverpaymentfiat" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="32"
                       translate="label" type="text">
                    <label>Overpayment (USD)</label>
                </field>
                <field id="exchange_locktime" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="33"
                       translate="label" type="text">
                    <label>Exchange Rate Lock Time (min)</label>
                </field>
                <field id="allowspecific" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40"
                       translate="label" type="allowspecific">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="50"
                       translate="label" type="multiselect">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="lock_address_timeout" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="51"
                       translate="label" type="text">
                    <label>Lock Address Timeout</label>
                    <can_be_empty>1</can_be_empty>
                    <comment>Time interval in seconds during which the address is locked for this
                        invoice only. 86400 seconds by default. Set â€‘1 for infinite lock</comment>
                </field>
                <field id="testnet" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="80" translate="label"
                       type="select">
                    <label>Testnet</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="debug" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="80" translate="label"
                       type="select">
                    <label>Debug</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>logging to file 'var/log/savvy.log' by default</comment>
                </field>
            </group>
        </section>
    </system>
</config>
